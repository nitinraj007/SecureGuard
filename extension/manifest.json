{
  "manifest_version": 3,
  "name": "SentinelShield Multi-Platform",
  "version": "3.5",
  "description": "Behavioral analysis for Instagram, Snapchat, X, WhatsApp, and more.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "https://www.instagram.com/*",
    "https://www.snapchat.com/*",
    "https://twitter.com/*",
    "https://x.com/*",
    "https://web.whatsapp.com/*",
    "https://www.facebook.com/*",
    "https://www.linkedin.com/*",
    "http://127.0.0.1:8000/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "shield.png"
  },
  "icons": {
    "16": "shield.png",
    "48": "shield.png",
    "128": "shield.png"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.instagram.com/*",
        "https://www.snapchat.com/*",
        "https://twitter.com/*",
        "https://x.com/*",
        "https://web.whatsapp.com/*",
        "https://www.facebook.com/*",
        "https://www.linkedin.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}